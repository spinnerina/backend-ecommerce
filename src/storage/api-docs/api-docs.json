    "components": {
        "schemas": {
            "Category": {
                "title": "Category",
                "required": [
                    "name"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": "1"
                    },
                    "name": {
                        "type": "string",
                        "example": "Category 1"
                    }
                },
                "type": "object"
            },
            "Order": {
                "title": "Order",
                "required": [
                    "id",
                    "user_id",
                    "total_amount",
                    "status",
                    "created_at",
                    "updated_at"
                ],
                "properties": {
                    "id": {
                        "description": "The order ID",
                        "type": "integer",
                        "format": "int64"
                    },
                    "user_id": {
                        "description": "The user ID",
                        "type": "integer",
                        "format": "int64"
                    },
                    "total_amount": {
                        "description": "The total amount of the order",
                        "type": "number",
                        "format": "float"
                    },
                    "status": {
                        "description": "The status of the order",
                        "type": "string"
                    },
                    "created_at": {
                        "description": "The date and time the order was created",
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "description": "The date and time the order was updated",
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            },
            "OrderItem": {
                "title": "OrderItem",
                "required": [
                    "id",
                    "order_id",
                    "product_id",
                    "quantity",
                    "price"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": "1"
                    },
                    "order_id": {
                        "type": "integer",
                        "example": "1"
                    },
                    "product_id": {
                        "type": "integer",
                        "example": "1"
                    },
                    "quantity": {
                        "type": "integer",
                        "example": "1"
                    },
                    "price": {
                        "type": "integer",
                        "example": "100"
                    }
                },
                "type": "object"
            },
            "Product": {
                "title": "Product",
                "required": [
                    "name",
                    "description",
                    "price",
                    "stock",
                    "category_id",
                    "image"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": "1"
                    },
                    "name": {
                        "type": "string",
                        "example": "Product 1"
                    },
                    "description": {
                        "type": "string",
                        "example": "Description of product 1"
                    },
                    "price": {
                        "type": "number",
                        "format": "float",
                        "example": "10.5"
                    },
                    "stock": {
                        "type": "integer",
                        "example": "10"
                    },
                    "category_id": {
                        "type": "integer",
                        "example": "1"
                    },
                    "image": {
                        "description": "Product image file",
                        "type": "string",
                        "format": "binary"
                    },
                    "category": {
                        "$ref": "#/components/schemas/Category"
                    }
                },
                "type": "object"
            },
            "User": {
                "title": "User",
                "required": [
                    "name",
                    "email",
                    "password"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "John Doe"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "admin@example.com"
                    },
                    "password": {
                        "type": "string",
                        "format": "password",
                        "example": "password"
                    },
                    "email_verified_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2021-01-01 00:00:00"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2021-01-01 00:00:00"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2021-01-01 00:00:00"
                    }
                },
                "type": "object"
            }
